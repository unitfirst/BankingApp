<Window x:Class="BankingApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankingApp"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="350"
        Width="350"
        ResizeMode="NoResize">
    <Grid>
        
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="Hello! Please select your role"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <Button x:Name="Btn_Consultant"
                    Margin="10"
                    Width="100"
                    Height="30">Consultant</Button>

            <Button x:Name="Btn_Manager"
                    Margin="10"
                    Width="100"
                    Height="30">Manager</Button>
        </StackPanel>
            
    </Grid>
</Window>
